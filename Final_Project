/*
    Final Project
*/

#include <NewPing.h> 
#include <LiquidCrystal_I2C.h>
#include <Wire.h>

LiquidCrystal_I2C lcd(0x20,16,2);
NewPing sonar(2,3,200);

const unsigned trig =2, echo=3,   //trigger and echo ping for rang finder
                    Pbtn =8, led =10, //Pbtn is the power button and led well... its the led
                    re =12;            //pin for the relay;
         int state= HIGH, reading, prev = LOW; 
         long t =0, debounce =10;
void setup()
  {
    lcd.init();
    sonar.ping();
    pinMode(trig,OUTPUT);
    pinMode(echo,INPUT);
    pinMode(Pbtn, INPUT);
    pinMode(led,OUTPUT);
    pinMode(re,OUTPUT);
    lcd.print("Ready to Arm");
  }

void loop()
  {
    
  
   reading = digitalRead(Pbtn);
   if(reading == HIGH && prev == LOW && millis()- t > debounce )
   {
     if(state == HIGH)
       state = LOW;
     else
       state = HIGH;
       
       t = millis();
   }
   digitalWrite(re, state);
   digitalWrite(led, state);
   while(state == HIGH){lcd.clear();  lcd.print("ARMED"); break;}
   
   prev = reading;
  }
