/*
 * 
 * 
 * 
 */
#define cbtn digitalRead(btns[0])
#define rbtn digitalRead(btns[1])

#include <LiquidCrystal.h>
#include <LiquidCrystal_I2C.h>

//LiquidCrystal lcd(12, 11, 5, 4, 3, 2);
LiquidCrystal lcd(0x20,16,2);
unsigned long  btns[] = {2,8}, stime, elapse;
float eTimes[9],av ;
char phrase[] = "Press yellow button 10 times";
byte count, size = (sizeof(eTimes)/sizeof(unsigned long)) + 1;
bool pressed, last;


void setup() 
{
 
  lcd.begin(16, 2);
  Serial.begin(9600);
   for(byte i =0; i < sizeof(btns); i++)
   {
     pinMode(btns[i], INPUT);
   }
  
}

void loop() {
 //pressed = cbtn ; 

//Attach interrupts and do this with a delay that switchs the start to get average times
	attachInterrupt(0, scroll, LOW);
  
  /*while(cbtn == 1 && count == 0)
  {
    scroll();
  }
  */
  pressed = HIGH;
  delay(10);
  
  if (pressed == HIGH && last == LOW && count <= size  )
  {
    stime = millis();
    last = pressed;
    count++;
    lcd.home();
    lcd.print(count);
    pressed = LOW;
  }
  else if (pressed == LOW && last == HIGH && count <= size )
  {
    elapse =  millis() - stime;
    eTimes[(count-1)] = elapse;
    last = pressed; 
  }
  last = pressed;

  if(count == 11)
  {  
    for(byte i = 0; i < size-1 ; i++)
      {
      av += (eTimes[i]);
      }
    
      lcd.clear();
      Serial.println((av/10),5);
      count++;
  }
  
 /*while (rbtn == 0)
    {
     reset();
    }
   */
        
}

/*
 *
 */
void scroll()
{
  lcd.print(phrase);
  delay(1500);

   for(byte i = 0; i < sizeof(phrase)*10; i++)
    {
      if(cbtn == 0)
          {
            lcd.clear();
            return;
          }
     lcd.scrollDisplayLeft();  
     delay(150);
    }

  lcd.clear();
  delay(500);
}

void reset()
  {
  lcd.clear();
  lcd.print("reset");
  delay(1500);
    lcd.clear();
    scroll();
  count = 0;
  

  }  
  
