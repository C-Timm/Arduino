 only blink 11 once not twice,and fix define button press
 */

#include <avr/pgmspace.h>
uint8_t del = 10;
#define btn digitalRead(4)
const uint8_t leds[] = {3,5,6,9,10,11};

void setup() {

  for(int led = 0; led <= sizeof(leds); led++)
  {
    pinMode(led,OUTPUT);
  }
 
}

void loop() {

    ledFor();
    
    ledBac();
    
  while (!btn)
 {
 }
 // while the button is not pressed do nothing
    
    
}

/*
 * Blinks LED's Forward  
 */
void ledFor()
{
  for(int led = 0; led <= 5; led++)
  {
   fade(led);
  }
  
}

/*
 * Blinks LED's Backwards 
 */
void ledBac()
{
  for(int led = 5; led >= 0; led--)
  {
    fade(led);
  }
   
  
}

void fade(int led)
{
  for(int i =0;i<=255; i+=4)
  {
    analogWrite(leds[led], i);
    delay(del);
  }

    for(int j = 255 ;j >= 0; j-=4)
    {
    analogWrite(leds[led], j);
    delay(del);
    }
}




