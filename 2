

#include <LiquidCrystal_I2C.h>
#include <Wire.h>

char btn = 7, led = 10;
int wait = 10;
int count = 0;
int lcounter =0;
bool t = true;

LiquidCrystal_I2C lcd(0x20, 20, 2);

void setup() {
    lcd.init();
    pinMode(led,OUTPUT);
    pinMode(btn,INPUT);
    lcd.print("Count:");
   
}

void loop() {
 
 while( digitalRead(btn)==0 )//if btn is pressed 0= pressed
  {
    if (t ==0)
    {
    count++;
    lcd.setCursor(0,1);
    lcd.print(count);
    digitalWrite(led,HIGH);
    delay(500);
    t++;
    }
    else{
      break;
    }
  }

  digitalWrite(led,LOW);
  delay(wait);
  lcounter++;

}
Serial.begin(2400);
  Serial.println("sup dude");
