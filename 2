

#include <LiquidCrystal_I2C.h>
#include <Wire.h>

char btn = 7, led = 10;
int wait = 10;
int count = 0;
bool t = true;

LiquidCrystal_I2C lcd( 0x20, 20, 2);

void setup()
{
   lcd.begin();
   lcd.backlight();
    pinMode(led,OUTPUT);
    pinMode(btn,INPUT);
    lcd.print("Count:");
}

void loop() 
{
 
 while( digitalRead(btn) == 0 && t == true)//if btn is pressed 0= pressed
  {
    count++;
    lcd.setCursor(0,1);
    lcd.print(count);
    digitalWrite(led,HIGH);
    delay(500);
    t = false;
   
  }

  digitalWrite(led,LOW);
  delay(wait);

  t = true;

}
